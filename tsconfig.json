{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "svgr.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/ui/Globe/Globe.tsx",
    "src/components/sections/PageTeam/desingeBySvitlana/Hero/Globe.jsx",
     "src/components/sections/Experience/designedBySvitlana/Head/Stats.jsx",
    "src/components/sections/Experience/designedBySvitlana/Head/Head.jsx",
    "src/components/sections/Experience/designedBySvitlana/Head/Head.jsx"  
    ],
  "exclude": ["node_modules"]
}
